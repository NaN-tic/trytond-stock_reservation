<tree string="Stock Reservation" colors="Eval('warning_color', 'black')">
    <field name="product"/>
    <field name="quantity"/>
    <field name="uom"/>
    <field name="source_document"/>
    <field name="destination_document"/>
    <field name="destination_planned_date"/>
    <field name="reserve_type"/>
    <field name="day_difference"/>
    <field name="state"/>
    <button string="Wait" name="wait" icon="tryton-go-next"/>
    <button string="Reset to Draft" name="draft" icon="tryton-clear"/>
    <field name="internal_shipments" tree_invisible="1" />
    <field name="customer_shipments" tree_invisible="1" />
    <field name="customer_return_shipments" tree_invisible="1" />
    <field name="supplier_shipments" tree_invisible="1" />
    <field name="supplier_return_shipments" tree_invisible="1" />
    <field name="productions" tree_invisible="1" />
    <field name="warning_color" tree_invisible="1"/>
</tree>
